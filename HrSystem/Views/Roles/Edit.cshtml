@model DataLayer.ViewModels.EditRoleClaimsViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h2>Edit Role</h2>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="RoleId" />
                        <div class="form-group">
                            <label asp-for="RoleName">Role Name</label>
                            <input type="text" class="form-control" asp-for="RoleName" />
                        </div>

                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Module Name</th>
                                    <th>Show</th>
                                    <th>Add</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Employee</td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Employee.Show" @(Model.Claims.Contains(AuthConstants.Employee.Show) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Employee.Add" @(Model.Claims.Contains(AuthConstants.Employee.Add) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Employee.Edit" @(Model.Claims.Contains(AuthConstants.Employee.Edit) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Employee.Delete" @(Model.Claims.Contains(AuthConstants.Employee.Delete) ? "checked" : "") /></td>
                                </tr>

                                <tr>
                                    <td>Group</td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Group.Show" @(Model.Claims.Contains(AuthConstants.Group.Show) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Group.Add" @(Model.Claims.Contains(AuthConstants.Group.Add) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Group.Edit" @(Model.Claims.Contains(AuthConstants.Group.Edit) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Group.Delete" @(Model.Claims.Contains(AuthConstants.Group.Delete) ? "checked" : "") /></td>
                                </tr>


                                <tr>
                                    <td>Permission</td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Permissions.Show" @(Model.Claims.Contains(AuthConstants.Permissions.Show) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Permissions.Add" @(Model.Claims.Contains(AuthConstants.Permissions.Add) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Permissions.Edit" @(Model.Claims.Contains(AuthConstants.Permissions.Edit) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Permissions.Delete" @(Model.Claims.Contains(AuthConstants.Permissions.Delete) ? "checked" : "") /></td>
                                </tr>

                                <tr>
                                    <td>Salary</td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Salary.Show" @(Model.Claims.Contains(AuthConstants.Salary.Show) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Salary.Add" @(Model.Claims.Contains(AuthConstants.Salary.Add) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Salary.Edit" @(Model.Claims.Contains(AuthConstants.Salary.Edit) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Salary.Delete" @(Model.Claims.Contains(AuthConstants.Salary.Delete) ? "checked" : "") /></td>
                                </tr>

                                <tr>
                                    <td>Attendance</td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Attendance.Show" @(Model.Claims.Contains(AuthConstants.Attendance.Show) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Attendance.Add" @(Model.Claims.Contains(AuthConstants.Attendance.Add) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Attendance.Edit" @(Model.Claims.Contains(AuthConstants.Attendance.Edit) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.Attendance.Delete" @(Model.Claims.Contains(AuthConstants.Attendance.Delete) ? "checked" : "") /></td>
                                </tr>


                                <tr>
                                    <td>General Settings</td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.GeneralSettings.Show" @(Model.Claims.Contains(AuthConstants.GeneralSettings.Show) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.GeneralSettings.Add" @(Model.Claims.Contains(AuthConstants.GeneralSettings.Add) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.GeneralSettings.Edit" @(Model.Claims.Contains(AuthConstants.GeneralSettings.Edit) ? "checked" : "") /></td>
                                    <td><input type="checkbox" name="Claims" value="@AuthConstants.GeneralSettings.Delete" @(Model.Claims.Contains(AuthConstants.GeneralSettings.Delete) ? "checked" : "") /></td>
                                </tr>
                            </tbody>
                        </table>

                        <button type="submit" class="btn btn-primary">Update Role</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

