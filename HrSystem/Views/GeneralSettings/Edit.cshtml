@model DataLayer.Entities.GeneralSettings

@{
    ViewData["Title"] = "Edit General Settings";
}

<div class="container-fluid d-flex justify-content-between align-items-start">
    <h2>Edit General Settings for Employee @Model.Employee.EmployeeName</h2>
    <a asp-action="Index" asp-controller="Employees" class="btn btn-secondary">Back to Employee List</a>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    
    <div class="form-group">
        <label asp-for="bonusPerHoure" class="control-label"></label>
        <input asp-for="bonusPerHoure" class="form-control" />
        <span asp-validation-for="bonusPerHoure" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="rivalPerHour" class="control-label"></label>
        <input asp-for="rivalPerHour" class="form-control" />
        <span asp-validation-for="rivalPerHour" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WeeklyHolidayList" class="control-label">Weekly Holidays</label>
        <div>
            @foreach (var day in Enum.GetValues(typeof(Day)).Cast<Day>())
            {
                <div class="form-check">
                    <input type="checkbox" name="WeeklyHolidayList" value="@day"
                           class="form-check-input"
                    @(Model.WeeklyHolidayList.Contains(day) ? "checked" : "") />
                    <label class="form-check-label">@day</label>
                </div>
            }
        </div>
        <span asp-validation-for="WeeklyHolidayList" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
